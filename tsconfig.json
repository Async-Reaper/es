{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@app": ["./app/"],
      "@entities": ["./entities/"],
      "@features": ["./features/"],
      "@shared": ["./shared/"],
      "@pages": ["./pages/"],
      "@widgets": ["./widgets/"],
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
